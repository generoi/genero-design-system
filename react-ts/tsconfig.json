{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "genero-design-system": ["../dist/types"],
      "genero-design-system/loader": ["../loader"]
    },
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../react",
    "removeComments": false,
    "sourceMap": true,
    "jsx": "react",
    "target": "es2015"
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["**/__tests__/**"],
  "compileOnSave": false,
  "buildOnSave": false
}
